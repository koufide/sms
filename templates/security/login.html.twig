{% extends 'base.html.twig' %}
{% block title %}Connexion!{% endblock %}



{% block bmilieu %}
<div class="container">
    <div class="row">
        <div class="col-6 mx-auto mt-5 p-3" id="dv_frm_login">
            <fieldset>
                <form method="post">
                    {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <legend>
                        <i class="fa fa-lock" aria-hidden="true"></i>
                        <span class="h3 mb-3 font-weight-normal">Connexion</span>
                    </legend>
                    <div class="form-group">
                        <label for="inputUsername" class="sr-only">Username</label>
                        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control"
                            placeholder="Username" required autofocus />
                    </div>
                    <!--form grpi -->
                    <div class="form-group">
                        <label for="inputPassword" class="sr-only">Password</label>
                        <input class="form-control" id="inputPassword" name="password" placeholder="Password" required
                            type="password" />
                    </div>
                    <!-- form-group -->
                    <div class="form-group">
                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me" />
                                Rester connect√©
                            </label>
                        </div>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
                    {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me
                    functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    #}
                    <button class="btn btn-danger" type="submit">
                        Connexion <i class="fa fa-unlock" aria-hidden="true"></i>
                    </button>
                </form>
            </fieldset>
            <!--form-->
        </div>
        <!--col-->
    </div>
    <!--row//-->

</div>
<!--container-->
{% endblock bmilieu %}