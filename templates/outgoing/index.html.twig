{% extends 'base.html.twig' %}

{% block title %}Messages envoyés{% endblock %}

{% block body %}
<h3>Messages envoyés</h3>
<hr />

<table class="table myTable" id="myTableOutgoing">
    <thead>
        <tr>
            <th>Id</th>
           <!-- <th>De</th> -->
            <th>A</th>
            <th>MessageId</th>
            <th>send Status</th>
            <th>Message</th>
            <th>SendsmsAt</th>
            <th>reportStatus</th>
            <th>reportStatusDescription</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
        {% for outgoing in outgoings %}
        <tr>
            <td>{{ outgoing.id }}</td>
            {# <td>{{ outgoing.de }}</td>  #}
            <td>{{ outgoing.a }}</td>
            <td>{{ outgoing.messageId }}</td>
            <td>{{ outgoing.sendName }}</td>
            <td>{{ outgoing.text }}</td>
            <td>{{ outgoing.sendsmsAt ? outgoing.sendsmsAt|date('Y-m-d H:i:s') : '' }}</td>
            <td>{{ outgoing.reportStatusName }}</td>
            <td>{{ outgoing.reportStatusDescription }}</td>
            <td>
                <a href="{{ path('outgoing_show', {'id': outgoing.id}) }}">Detail</a>
                <!-- <a href="{{ path('outgoing_edit', {'id': outgoing.id}) }}">Modifier</a> -->
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="9">Aucune donnée</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<!-- <a href="{{ path('outgoing_new') }}">Create new</a> -->
{% endblock %}


{% block breadcrumb %}
{{ parent() }}
<li class="breadcrumb-item active"><a href="{{ path('outgoing_index') }}">Messages envoyés</a></li>

{% endblock breadcrumb %}