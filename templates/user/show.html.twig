{% extends 'user/index.html.twig' %}

{% set pagename = 'Utilisateur' %}

{% block title %}{{ pagename }}{% endblock %}

{% block body %}
<h3>{{ pagename }}
</h3>
(<a href="#" data-toggle="collapse" data-target=".user">Plus d'informations</a>)
<hr />

<table class="table">
    <tbody>
        <!-- <tr>
            <th>Id</th>
            <td>{{ user.id }}</td>
        </tr>  -->
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Username</th>
            <td>{{ user.username }}</td>
        </tr>
        <tr>
            <th>Responsable</th>
            <td>{{ user.manager }}</td>
        </tr>
        {# <tr>
            <th>Password</th>
            <td>{{ user.password }}</td>
        </tr> #}
        <tr>
            <th>Roles</th>
            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
        </tr>
        <tr>
            <th>Actif</th>
            <td>{{ user.isActive ? 'Oui' : 'Non' }}</td>
        </tr>


        <tr id="user" class="user collapse">
            <th>Téléphone</th>
            <td>{{ user.telephone }}</td>
        </tr>
        <tr class="user collapse">
            <th>Displayname</th>
            <td>{{ user.displayname }}</td>
        </tr>
        <tr class="user collapse">
            <th>Compte utilisateur</th>
            <td>{{ user.samaccountname }}</td>
        </tr>
        <tr class="user collapse">
            <th>Fonction</th>
            <td>{{ user.description }}</td>
        </tr>
        <tr class="user collapse">
            <th>Date création</th>
            <td>{{ user.dateajout|date }}</td>
        </tr>
        <tr class="user collapse">
            <th>Actif</th>
            <td>{{ user.isActive ? 'Oui' : 'Non' }}</td>
        </tr>

        </tr>

    </tbody>
</table>



<a role="button" class="btn btn-outline-primary" href="{{ path('user_index') }}">Utilisateurs</a>

<a class="btn btn-outline-primary" href="{{ path('user_new') }}">Ajouter</a>

<a role="button" class="btn btn-outline-primary" href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>

{{ include('user/_active_form.html.twig') }}

{{ include('user/_delete_form.html.twig') }}
{% endblock %}


{% block breadcrumb %}
{{parent()}}
<li class="breadcrumb-item active"><a href="{{ path('user_show',{'id':user.id}  ) }}"> {{ pagename }}
        ({{user.username|upper}})
    </a></li>
