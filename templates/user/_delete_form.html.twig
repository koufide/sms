<form method="post" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm('Voulez vous vraiement supprimer cet utilisateur?');"
    class="form form-horizontal" style="display: inline">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn btn-outline-danger">Supprimer</button>
</form>